<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>

<main>
  <div class="container-lg py-3">
    <h2 class="py-3"><%= title %></h1>
    <form class="px-5" id="new-form" action="/flights" method="POST">
      <div class="py-2">
        <label for="airline-input">Airline:</label>
        <select name="airline" id="airline-select">
            <option value="American">American</option>
            <option value="Southwest">Southwest</option>
            <option value="United">United</option>
            <option value="Delta">Delta</option>
          </select>
      </div>

      <div class="py-2">
        <label for="flightNo-input">Flight Number: </label>
        <input type="Number" name="flightNo" id="flightNo-input">
      </div>
      
      <div class="py-2">
        <label for="departs-input">Departs:</label>
        <input type="datetime-local" name="departs" id="departs-input">
      </div>
      
      <button class="my-4 btn btn-outline-warning" type="submit">Add Flight</button>
    </form>

  </div>
</main>

<%- include("../partials/footer") %>